<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/mine_info"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.sherry.cqsubwayass.widget.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/mine_heart_image"
                android:src="@mipmap/ic_boy"/>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/mine_heart_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Sherry"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mine_name"/>
                <TextView
                    android:textColor="@color/white"
                    android:text="18********54"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mine_email"/>
            </LinearLayout>

            <ImageView
                android:layout_marginRight="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_right"/>
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/mine_collect"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/mine_collect_image"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_collect"/>
            <TextView
                android:layout_toRightOf="@+id/mine_collect_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey_light"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:text="收藏"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_right_grey"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/grey_light"/>
        <RelativeLayout
            android:id="@+id/mine_share"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/mine_share_image"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_share"/>
            <TextView
                android:layout_toRightOf="@+id/mine_share_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey_light"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:text="分享"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_right_grey"/>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <RelativeLayout
            android:id="@+id/mine_suggest"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/mine_suggest_image"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_suggest"/>
            <TextView
                android:layout_toRightOf="@+id/mine_suggest_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey_light"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:text="意见反馈"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_right_grey"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/grey_light"/>

        <RelativeLayout
            android:id="@+id/mine_clear"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/mine_clear_image"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/ic_clear"/>
            <TextView
                android:layout_toRightOf="@+id/mine_clear_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/grey_light"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:text="清空缓存"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_right_grey"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mine_about"
        android:background="@color/white"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/mine_about_image"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_about"/>
        <TextView
            android:layout_toRightOf="@+id/mine_about_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey_light"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:text="关于我们"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_right_grey"/>
    </RelativeLayout>


</LinearLayout>
