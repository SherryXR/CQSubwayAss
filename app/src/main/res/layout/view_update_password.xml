<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/update_password_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:hint="请输入现在的密码"
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/grey_light"
            android:textSize="14sp"
            app:theme="@style/EditTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/update_password_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:hint="请输入新密码："
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/grey_light"
            android:textSize="14sp"
            app:theme="@style/EditTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/update_password_new_password_twice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:hint="请再次输入新的密码："
            android:inputType="text"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/grey_light"
            android:textSize="14sp"
            app:theme="@style/EditTheme" />

    </LinearLayout>


</LinearLayout>