<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <Button
        android:id="@+id/item_guide_show_num"
        android:layout_marginLeft="18dp"
        android:text="12"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/corner_yellow_color"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_guide_show_name"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_dark"
        android:layout_marginLeft="12dp"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/item_guide_show_num"
        android:text="朝天门"/>

    <TextView
        android:id="@+id/item_guide_show_tips"
        android:layout_toLeftOf="@+id/item_guide_show_lingdang"
        android:text="注意注意,需要换乘哦~~"
        android:textColor="@color/grey_light"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="25dp"
        android:id="@+id/item_guide_show_lingdang"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_centerVertical="true"
        android:layout_height="25dp"
        android:src="@mipmap/ic_lingdang_gray"/>

    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/grey_light"/>



</RelativeLayout>